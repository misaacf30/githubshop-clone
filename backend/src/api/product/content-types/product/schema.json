{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "product_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product-category.product-category",
      "inversedBy": "products"
    },
    "description": {
      "type": "text"
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "red",
        "black",
        "white",
        "gray"
      ]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "stock": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "product_sizes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product-size.product-size",
      "inversedBy": "products"
    }
  }
}
